<h4>Editing Student</h4>

<div class="row">
  <div class="card">
    <div class="card-body">
      <%= form_with scope: :user, url: student_path(@user), method: :patch do |form| %>
        <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this @ from being saved:</h2>

            <ul>
              <% @user.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :first_name, class: "form-label" %>
          <%= form.text_field :first_name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :last_name, class: "form-label" %>
          <%= form.text_field :last_name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :email, class: "form-label" %>
          <%= form.text_field :email, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :dob, class: "form-label" %>
          <%= form.text_field :dob, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :gender, class: "form-label" %>
          <%= form.text_field :gender, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :phone_number, class: "form-label" %>
          <%= form.text_field :phone_number, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :street_address, class: "form-label" %>
          <%= form.text_field :street_address, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :city, class: "form-label" %>
          <%= form.text_field :city, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :state, class: "form-label" %>
          <%= form.text_field :state, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :country, class: "form-label" %>
          <%= form.text_field :country, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :pin_code, class: "form-label" %>
          <%= form.text_field :pin_code, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :active, class: "form-label" %>
          <%= form.check_box :active %>
        </div>

        <div class="actions text-center">
          <%= link_to 'Back', students_path, class: "btn btn-secondary" %>
          <%= form.submit class: "btn btn-primary" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
