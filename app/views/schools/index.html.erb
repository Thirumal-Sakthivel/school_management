<div class="row">
  <h4 class="mb-3">Schools
    <% if can? :create, School %>
      <%= link_to 'New School', new_school_path, class: 'btn btn-outline-success fs-6 float-end' %>
    <% end %>
  </h4>
  <div class="card">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone number</th>
          <th>City</th>
          <th>Country</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @schools.each do |school| %>
          <tr>
            <td><%= school.name %></td>
            <td><%= school.email %></td>
            <td><%= school.phone_number %></td>
            <td><%= school.city %></td>
            <td><%= school.country %></td>
            <td>
              <% if can? :read, School %>
                <%= link_to 'Show', school, class: 'btn btn-sm btn-outline-primary' %>
              <% end %>
              <% if can? :update, School %>
                <%= link_to 'Edit', edit_school_path(school), class: 'btn btn-sm btn-outline-warning' %>
              <% end %>
              <% if can? :destroy, School %>
                <%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
