<div class="row">
  <h4 class="mb-3">Courses
    <% if can? :create, Course %>
      <%= link_to 'New Course', new_course_path, class: 'btn btn-outline-success fs-6 float-end' %>
    <% end %>
  </h4>
  <div class="card">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>School</th>
          <th>Duration</th>
          <th>Hours per day</th>
          <th>Active</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @courses.each do |course| %>
          <tr>
            <td><%= course.name %></td>
            <td><%= course&.school.name %></td>
            <td><%= course.duration %></td>
            <td><%= course.hours_per_day %></td>
            <td><%= course.active %></td>
            <td>
              <% if can? :read, Course %>
                <%= link_to 'Show', course, class: 'btn btn-sm btn-outline-primary' %>
              <% end %>
              <% if can? :update, Course %>
                <%= link_to 'Edit', edit_course_path(course), class: 'btn btn-sm btn-outline-warning' %>
              <% end %>
              <% if can? :destroy, Course %>
                <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
