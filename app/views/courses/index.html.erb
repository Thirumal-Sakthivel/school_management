<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Course type</th>
      <th>Fee</th>
      <th>Description</th>
      <th>Category</th>
      <th>School</th>
      <th>Learn content</th>
      <th>Curriculam</th>
      <th>Duration</th>
      <th>Hours per day</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.course_type %></td>
        <td><%= course.fee %></td>
        <td><%= course.description %></td>
        <td><%= course.category_id %></td>
        <td><%= course.school_id %></td>
        <td><%= course.learn_content %></td>
        <td><%= course.curriculam %></td>
        <td><%= course.duration %></td>
        <td><%= course.hours_per_day %></td>
        <td><%= course.active %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

