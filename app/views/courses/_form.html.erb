<%= form_with(model: course) do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
        <% course.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :course_type, class: "form-label" %>
    <%= form.select :course_type, Course.course_types.to_a.collect{ |a| [a[0].titleize, a[0]]}, {} , { class: "form-control" } %>
  </div>

  <div class="mb-3">
    <%= form.label :fee, class: "form-label" %>
    <%= form.text_field :fee, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :category_id, class: "form-label" %>
    <%= form.select :category_id, Category.all.pluck(:name, :id), {} , { class: "form-control" } %>
  </div>

  <div class="mb-3">
    <%= form.label :school_id, class: "form-label" %>
    <%= form.select :school_id, School.all.pluck(:name, :id), {} , { class: "form-control" } %>
  </div>

  <div class="mb-3">
    <%= form.label :learn_content, class: "form-label" %>
    <%= form.text_area :learn_content, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :curriculam, class: "form-label" %>
    <%= form.text_area :curriculam, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :duration, class: "form-label" %>
    <%= form.text_field :duration, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :hours_per_day, class: "form-label" %>
    <%= form.text_field :hours_per_day, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :active, class: "form-label" %>
    <%= form.check_box :active %>
  </div>

  <div class="actions text-center">
    <%= link_to 'Back', courses_path, class: "btn btn-secondary" %>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
