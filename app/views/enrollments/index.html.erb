<p id="notice"><%= notice %></p>

<h1>Enrollments</h1>

<table>
  <thead>
    <tr>
      <th>Enrollment date</th>
      <th>School</th>
      <th>Course</th>
      <th>Batch</th>
      <th>Student</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enrollments.each do |enrollment| %>
      <tr>
        <td><%= enrollment.enrollment_date %></td>
        <td><%= enrollment.school_id %></td>
        <td><%= enrollment.course_id %></td>
        <td><%= enrollment.batch_id %></td>
        <td><%= enrollment.student_id %></td>
        <td><%= enrollment.status %></td>
        <td><%= link_to 'Show', enrollment %></td>
        <td><%= link_to 'Edit', edit_enrollment_path(enrollment) %></td>
        <td><%= link_to 'Destroy', enrollment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

